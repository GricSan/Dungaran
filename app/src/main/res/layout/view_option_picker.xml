<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_option_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Option Title" />

    <ImageView
        android:id="@+id/iv_button_prev_option"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/purple_200"
        android:src="@drawable/ic_round_keyboard_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_option_title"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_option_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:padding="2dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/iv_button_prev_option"
        app:layout_constraintEnd_toStartOf="@id/iv_button_next_option"
        app:layout_constraintStart_toEndOf="@id/iv_button_prev_option"
        app:layout_constraintTop_toBottomOf="@id/tv_option_title"
        tools:text="Option #1" />

    <ImageView
        android:id="@+id/iv_button_next_option"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/purple_200"
        android:src="@drawable/ic_round_keyboard_arrow_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_option_title"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>