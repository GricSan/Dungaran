<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  Application-wide styles  -->
    <style name="ScreenRootContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">@dimen/application_screen_container_padding</item>
    </style>

    <style name="ScreenTitleCard" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_application_card_element</item>
        <item name="android:elevation">@dimen/application_card_element_elevation</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--  Main Menu Screen styles  -->
    <style name="MainMenuScreenButton" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">144dp</item>
        <item name="android:background">@drawable/bg_application_card_element</item>
        <item name="android:backgroundTint">@color/purple_200</item>
        <item name="android:elevation">@dimen/application_card_element_elevation</item>
        <item name="android:padding">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>